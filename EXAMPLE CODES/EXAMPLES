#include"gpio.h"
#include"sevensegment.h"

void downcounter(int a ,port m )  //DOWNCOUNTER
{
        for(int i=a;i>=0;i--)
        {
            char n=(unsigned char)i+'0';
            seven_segment(n,m);
           __delay_ms(100);
        }
}

void upcounter(int a,port m)   //UPCOUNTER
{
        for(int i=0;i<a;i++)
        {
            char n=(unsigned char)i+'0';
            seven_segment(n,m);
            __delay_ms(100);
        }
}

